const valueProps = [
    {
        iconPath: "M8.25 18.75a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 0 1-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 0 0-3.213-9.193 2.056 2.056 0 0 0-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106A48.554 48.554 0 0 0 10.026 6H6M4.5 18.75H3.375c-.621 0-1.125-.504-1.125-1.125V14.25m13.5 0V9", // SVG path for truck
        title: "Free Worldwide Shipping",
        description: "Get your orders delivered to your doorstep, anywhere in the world, at no extra cost."
